<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_supprt_2"
    tools:context=".Activity.Setting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_supprt_2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_below="@+id/tvWelcome"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="security"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvChangePass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/settingItem"
                        android:textColor="@color/white"
                        android:text="Change Password" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/Black" />

                    <TextView
                        android:id="@+id/tvChangeSecureQuestion"
                        style="@style/settingItem"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="change_security_question" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/Black" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp">

                        <!--                        android:theme="@style/Color1SwitchStyle"-->
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swCapture"
                            style="@style/settingItem"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:checked="false"
                            />

                        <TextView
                            android:id="@+id/tvTakePicture"
                            style="@style/settingItem"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/swCapture"
                            android:text="take_picture" />
                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>




            <!--            app:cardBackgroundColor="@color/dialog_bg"-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_supprt_2"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_below="@+id/tvWelcome"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="More"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRate"
                        style="@style/settingItem"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="rate_star" />


                    <!--                    android:background="@color/unicorn_light_black"-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/Black"
                        />

                    <TextView
                        android:id="@+id/tvShare"
                        style="@style/settingItem"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="share_to_friend" />




                    <!--                    android:background="@color/unicorn_light_black"-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/Black"
                        />

                    <TextView
                        android:id="@+id/tvPolicy"
                        style="@style/settingItem"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="policy" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
