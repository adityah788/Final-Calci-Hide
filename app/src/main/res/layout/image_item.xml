<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_item_Imageview"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/radius"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/tickMarkImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/baseline_check_box_24" />

        <ImageView
            android:id="@+id/untickMarkImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/baseline_check_box_outline_blank_24"
            android:visibility="gone" />

        <!-- Adjusted TextView with bottom margin -->
        <TextView
            android:id="@+id/image_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:background="@drawable/rounded_corner_time"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="04:45"
            android:textColor="@color/White" />

    </FrameLayout>
</androidx.cardview.widget.CardView>
