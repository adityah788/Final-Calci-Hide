<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/primary_background"
    tools:context=".Activity.AboutActivity"
    android:theme="@style/Theme.UI_for_all_activity"
    >



    <RelativeLayout
        android:id="@+id/about_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp">


        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/about_main_toolbar_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:src="@drawable/flati_arrow_left_24" />

        <!-- Title -->
        <TextView
            android:id="@+id/about_main_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/about_main_toolbar_back_arrow"
            android:padding="5dp"
            android:text="About"
            android:textColor="#fff"
            android:textSize="20sp" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/about_app_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/about_status_bar"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/showtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator Lock"
        android:textSize="28sp"
        android:textColor="#fff"
        android:layout_below="@id/about_app_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/showtitle"
        android:layout_marginRight="12dp"
        app:cardBackgroundColor="@color/TertiaryPrimarycolor"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/about_privacy_policy"
                style="@style/settingItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:text="Privacy Policy"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/settincredit"
                style="@style/settingItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:text="Credits"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>