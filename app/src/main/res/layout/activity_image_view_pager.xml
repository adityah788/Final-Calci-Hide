<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageViewpager_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/status_bar">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/imageViewpager_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/image_view_pager_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="5dp">


            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/img_viewpager_toolbar_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:src="@drawable/baseline_arrow_back_24" />


            <!-- Menu Icon -->
            <ImageView
                android:id="@+id/img_viewpager_toobar_deleter_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:src="@drawable/trash_24" />

            <ImageView
                android:id="@+id/img_viewpager_main_toobar_unlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/img_viewpager_toobar_deleter_icon"
                android:padding="5dp"
                android:src="@drawable/unlock_24" />


        </RelativeLayout>


    </RelativeLayout>

    <!-- Include Lottie Animations Layout -->
    <FrameLayout
        android:id="@+id/viewpager_animation_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <include
            layout="@layout/animation"/>
    </FrameLayout>



</RelativeLayout>













