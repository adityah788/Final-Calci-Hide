<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Calculator">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/limebar"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/calculator_linear_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPassTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="#00000000"
                android:editable="false"
                android:gravity="center"
                android:inputType="none"
                android:lines="1"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="Create New Password"
                android:textColor="@color/Black"
                android:textIsSelectable="true"
                android:textSize="20sp"
                android:textStyle="bold" />

<!--            Todo:  when user one time enter the password in (calculator_linear_password_feild)  set text confirm 4 digit password and press = in tvPassDetail-->

            <TextView
                android:id="@+id/tvPassDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#00000000"
                android:editable="false"
                android:gravity="center"
                android:inputType="none"
                android:maxLines="2"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="Enter a 4 digit password and press = "
                android:textColor="@color/Black"
                android:textIsSelectable="true"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/calculator_linear_password_feild"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

<!--                Todo : here below 4 linear layouts (EditText) works as the 4 digit password -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/Passtxt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:editable="false"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:textColor="@color/Black"
                        android:textColorHint="@color/Black"
                        android:textIsSelectable="true"
                        android:textSize="30sp" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/Black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/Passtxt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:editable="false"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:textColor="@color/Black"
                        android:textColorHint="@color/Black"
                        android:textIsSelectable="true"
                        android:textSize="30sp" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/Black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/Passtxt3"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:editable="false"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:textColor="@color/Black"
                        android:textColorHint="@color/Black"
                        android:textIsSelectable="true"
                        android:textSize="30sp" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/Black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/Passtxt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:editable="false"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:textColor="@color/Black"
                        android:textColorHint="@color/Black"
                        android:textIsSelectable="true"
                        android:textSize="30sp" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/Black" />
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="64dp"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="4dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/reel"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:text="Reset"
                        android:textAllCaps="true"
                        android:textColor="@color/Black"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/calculator_relative_calculation_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/limebar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="bottom|center_horizontal">


            <TextView
                android:id="@+id/dataTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:textAlignment="viewEnd"
                android:textSize="29sp"
                app:layout_constraintBottom_toTopOf="@+id/resultTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/resultTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:textAlignment="viewEnd"
                android:textColor="#555558"
                android:textSize="29sp"
                android:visibility="gone"
                android:layout_below="@id/dataTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </RelativeLayout>


    </FrameLayout>


    <View
        android:id="@+id/limebar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/limeclr"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear"
                android:text="C"
                style="@style/operatorbtn"
                android:onClick="onClearClick" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_backspace"
                style="@style/operatorbtn"
                android:onClick="onBackClick"
                app:icon="@drawable/baseline_backspace_24"
                app:iconTint="@color/btnbackground2"/>




            <com.google.android.material.button.MaterialButton
                android:id="@+id/modulo"
                android:text="%"
                style="@style/operatorbtn"
                android:onClick="onOperatorClick"/>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_divide"
                android:text="/"
                style="@style/operatorbtn"
                android:onClick="onOperatorClick"                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_7"
                android:text="7"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_8"
                android:text="8"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_9"
                android:text="9"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_multi"
                android:text="*"
                style="@style/operatorbtn"
                android:onClick="onOperatorClick"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4"
                android:text="4"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_5"
                android:text="5"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_6"
                android:text="6"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sub"
                android:text="-"
                style="@style/operatorbtn"
                android:onClick="onOperatorClick"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1"
                android:text="1"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                android:text="2"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3"
                android:text="3"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Add"
                android:text="+"
                style="@style/operatorbtn"
                android:onClick="onOperatorClick"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:text="AC"
                android:id="@+id/btn_all_clear"
                style="@style/operatorbtn"
                android:textSize="19dp"
                android:onClick="onAllClearClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_zero"
                android:text="0"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:text="."
                android:id="@+id/btn_point"
                style="@style/digitBtn"
                android:onClick="onPointClick"/>



            <!-- TODO: if password is saaved in storage and user click on btn_Equal then match content of  dataTv with saved password in storage if matched move activity to ImageGallery.class-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Equal"
                android:text="="
                style="@style/operatorbtn"
                android:onClick="onEqualClick"/>



        </LinearLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

