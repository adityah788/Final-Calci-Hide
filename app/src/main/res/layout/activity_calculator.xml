<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Calculator">



    <!-- TODO: Only visible when setting password for first time -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Create your Password"
        android:visibility="gone"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- TODO: Only visible when setting password for first time -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:text="Enter 4 Digit passwor and then press '=' "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <!-- TODO: Only visible when setting password for first time and take password in this and save to storage on btn_Equal click-->
    <TextView
        android:id="@+id/password_customTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="9 6 8 7 "
        android:visibility="gone"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />



    <TextView
        android:id="@+id/dataTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:layout_marginEnd="12dp"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/resultTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resultTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:layout_marginEnd="12dp"
        android:textColor="#555558"
        android:visibility="gone"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@id/limebar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/limebar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/limeclr"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear"
                android:text="C"
                style="@style/operatorbtn"
                android:onClick="onClearClick" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_backspace"
                style="@style/operatorbtn"
                android:onClick="onBackClick"
                app:icon="@drawable/baseline_backspace_24"
                app:iconTint="@color/btnbackground2"/>




            <com.google.android.material.button.MaterialButton
                android:id="@+id/modulo"
                android:text="%"
                style="@style/operatorbtn"
                android:onClick="onOperatorClick"/>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_divide"
                android:text="/"
                style="@style/operatorbtn"
                android:onClick="onOperatorClick"                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_7"
                android:text="7"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_8"
                android:text="8"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_9"
                android:text="9"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_multi"
                android:text="*"
                style="@style/operatorbtn"
                android:onClick="onOperatorClick"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4"
                android:text="4"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_5"
                android:text="5"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_6"
                android:text="6"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sub"
                android:text="-"
                style="@style/operatorbtn"
                android:onClick="onOperatorClick"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1"
                android:text="1"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                android:text="2"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3"
                android:text="3"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Add"
                android:text="+"
                style="@style/operatorbtn"
                android:onClick="onOperatorClick"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:text="AC"
                android:id="@+id/btn_all_clear"
                style="@style/operatorbtn"
                android:textSize="19dp"
                android:onClick="onAllClearClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_zero"
                android:text="0"
                style="@style/digitBtn"
                android:onClick="onDigitClick"/>

            <com.google.android.material.button.MaterialButton
                android:text="."
                android:id="@+id/btn_point"
                style="@style/digitBtn"
                android:onClick="onPointClick"/>



            <!-- TODO: if password is saaved in storage and user click on btn_Equal then match content of  dataTv with saved password in storage if matched move activity to ImageGallery.class-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Equal"
                android:text="="
                style="@style/operatorbtn"
                android:onClick="onEqualClick"/>



        </LinearLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

