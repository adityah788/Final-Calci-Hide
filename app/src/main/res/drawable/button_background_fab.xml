<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer 1: The gradient background -->
    <item>
        <shape>
            <gradient
                android:angle="315"
                android:startColor="#4527A0"
                android:endColor="#456289"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>

    <!-- Layer 2: A semi-transparent overlay tint (optional) -->
    <item>
        <shape>
            <solid android:color="#55FFFFFF"/> <!-- Change the color as needed -->
        </shape>
    </item>
</layer-list>
