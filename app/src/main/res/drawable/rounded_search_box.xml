<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Solid background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dp"/>
            <solid android:color="@color/TertiaryPrimarycolor"/>
        </shape>
    </item>

    <!-- Gradient overlay -->
    <item>
        <shape android:shape="rectangle">

            <corners android:radius="40dp" /> <!-- Match the corner radius -->
        </shape>
    </item>

</layer-list>
